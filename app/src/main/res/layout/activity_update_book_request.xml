<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UpdateBookRequestActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_update_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="100dp">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_update_info_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Info" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_update_url_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book URL" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/form_update"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_update_layout" />

</RelativeLayout>