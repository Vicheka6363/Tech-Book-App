<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layoutAccount"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#025b87"
        android:padding="16dp">


        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_action_name" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_action_name_edit" />

        <ImageView
            android:id="@+id/idProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_action_name_profile" />

        <TextView
            android:id="@+id/lengkola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idProfile"
            android:layout_centerInParent="true"
            android:text="Leng Kola"
            android:textColor="#ffff"
            android:textSize="24sp" />

    </RelativeLayout>
    <RelativeLayout
        android:padding="16dp"
        android:layout_below="@id/layoutAccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Major"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/engineering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ITE_Engineering"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"

            />
        <TextView
            android:layout_below="@id/major"
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <TextView
            android:layout_below="@id/engineering"
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_below="@id/gender"
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DoB"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <TextView
            android:layout_below="@id/male"
            android:id="@+id/db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01-Jan-1990"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_below="@id/dob"
            android:id="@+id/pob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PoB"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <TextView
            android:layout_below="@id/db"
            android:id="@+id/pp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phnom Penh"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_below="@id/pob"
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <TextView
            android:layout_below="@id/pp"
            android:id="@+id/mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leng.Kola.Ferupp.kh"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_below="@id/email"
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <TextView
            android:layout_below="@id/mail"
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#21,phnom penh"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>
</RelativeLayout>